NAME = repetitiveWork

CPPFLAGS = -Wall -Wextra -Werror -std=c++98 --pedantic #-g3 -fsanitize=address
CPP = c++ $(CPPFLAGS)

SOURCES =	main.cpp \
			ClapTrap.cpp \
			FragTrap.cpp

OBJECS = $(SOURCES:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJECS)
	$(CPP) $^ -o $(NAME) -I.

%.o: %.cpp Makefile
	$(CPP) -c $< -o $@

clean:
	rm -rf $(OBJECS)

fclean: clean
	rm -rf $(NAME)

re: fclean all

.PHONY: all clean fclean re
